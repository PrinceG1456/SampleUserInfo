@model JqueryDatatableCrud.Models.Person
@{
    ViewBag.Title = "EditOrAdd";
    Layout = null;
}

@using (Html.BeginForm("EditOrAdd", "Person", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
